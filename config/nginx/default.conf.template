# upstream for uWSGI
 upstream uwsgi_app {
    server unix:/code/portfolio/uwsgi_app.sock;
 }
 server {
    listen       80;
    server_name  www.codepolo.xyz codepolo.xyz localhost;
    error_log    stderr warn;
    access_log   /dev/stdout main;
    location / {
        include      /etc/nginx/uwsgi_params;
        uwsgi_pass   uwsgi_app;
    }
    location /static/ {
      alias /code/portfolio/static/;
    }
    location /media/ {
      alias /code/portfolio/media/;
    }
 }